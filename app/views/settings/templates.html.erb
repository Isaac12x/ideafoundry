<div class="settings-container">
  <div class="page-header">
    <h2>Templates</h2>
    <div class="header-actions">
      <%= link_to settings_path, class: "btn btn-sm" do %>
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
        Back to Settings
      <% end %>
      <%= link_to new_settings_template_path, class: "btn btn-primary" do %>
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 5v14M5 12h14"/></svg>
        New Template
      <% end %>
    </div>
  </div>

  <% if @templates.any? %>
    <div class="templates-list">
      <% @templates.each do |template| %>
        <div class="template-settings-row">
          <div class="template-settings-info">
            <span class="template-settings-name"><%= template.name %></span>
            <% if template.is_default? %>
              <span class="template-default-badge">Default</span>
            <% end %>
            <span class="template-settings-meta">
              <%= pluralize(template.field_definitions.length, 'field') %> &middot;
              <%= pluralize(template.section_order.length, 'section') %>
            </span>
          </div>
          <div class="template-settings-actions">
            <%= link_to "View", template_path(template), class: "btn btn-sm" %>
            <%= link_to "Edit", edit_template_path(template), class: "btn btn-sm" %>
            <% unless template.is_default? %>
              <%= link_to "Delete", template_path(template), method: :delete,
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <h3>No templates yet</h3>
      <p>Templates let you customize how ideas are structured and scored.</p>
      <%= link_to "Create your first template", new_settings_template_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<style>
  .templates-list {
    margin-top: 2rem;
    background: var(--bg-surface);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  .template-settings-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--border-subtle);
    transition: background 0.15s;
  }

  .template-settings-row:last-child { border-bottom: none; }
  .template-settings-row:hover { background: var(--bg-elevated); }

  .template-settings-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    min-width: 0;
  }

  .template-settings-name {
    font-family: var(--font-display);
    font-style: italic;
    font-size: 1.05rem;
    font-weight: 400;
    color: var(--text-primary);
  }

  .template-default-badge {
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    padding: 2px 8px;
    border-radius: var(--radius-xl);
    background: var(--accent-muted);
    color: var(--accent);
    border: 1px solid var(--accent-emphasis);
    flex-shrink: 0;
  }

  .template-settings-meta {
    font-size: 0.8rem;
    color: var(--text-muted);
    white-space: nowrap;
  }

  .template-settings-actions {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .template-settings-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }
  }
</style>
