<div class="form-container">
  <div class="form-container-header">
    <h2>New Topology</h2>
    <p class="form-container-subtitle">Create a new topology node</p>
  </div>

  <%= form_with model: @topology, local: true do |form| %>
    <%= render 'form', form: form, topology: @topology, parent_options: @parent_options %>
  <% end %>
</div>
